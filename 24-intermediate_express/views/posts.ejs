<h1>The Posts Page</h1>

<!-- looping through data from server using ejs -->
<% for (let i = 0; i < posts.length; i++) { %>
    <li>
        <%= posts[i].title %> - <strong> <%= posts[i].author %></strong>
    </li>
<% } %>

